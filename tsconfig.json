{
  "compilerOptions": {
    "target": "ES6",
    "sourceMap": true,
    "jsx": "react",
    "strict": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}